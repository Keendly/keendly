# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)

#API
POST    /api/subscriptions              controllers.api.SubscriptionController.createSubscription()
GET     /api/subscriptions/:id          controllers.api.SubscriptionController.getSubscription(id: String)
PATCH   /api/subscriptions/:id          controllers.api.SubscriptionController.updateSubscription(id: String)

POST    /api/deliveries                 controllers.api.DeliveryController.createDelivery()
PATCH   /api/deliveries/:id             controllers.api.DeliveryController.updateDelivery(id: Long)
GET     /api/deliveries/:id             controllers.api.DeliveryController.getDelivery(id: Long)
GET     /api/deliveries                 controllers.api.DeliveryController.getDeliveries(page: Integer, pageSize: Integer)

GET     /api/feeds                      controllers.api.FeedController.getFeeds()
POST    /api/feeds/unread               controllers.api.FeedController.getUnread()
POST    /api/feeds/unreadCount          controllers.api.FeedController.getUnreadCount()
POST    /api/feeds/markAsRead           controllers.api.FeedController.markAsRead()

GET     /api/users/:id                  controllers.api.UserController.getUser(id: String)
PATCH   /api/users/:id                  controllers.api.UserController.updateUser(id: String)

# WEB
GET     /                               controllers.WebController.index()
GET     /login                          controllers.WebController.login(error: String ?= null)
POST    /inoreaderLogin                 controllers.LoginController.inoReaderLogin()
POST    /oldReaderLogin                 controllers.LoginController.oldReaderLogin()
GET     /feedlyCallback                 controllers.LoginController.feedlyCallback(code: String, error: String)
GET     /feeds                          controllers.WebController.feeds()
GET     /deliveries                     controllers.WebController.deliveries()
GET     /user                           controllers.WebController.user()
GET     /logout                         controllers.WebController.logout()
