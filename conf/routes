# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /login                      controllers.LoginController.login(code: String)
# GET     /feedlyCallback             controllers.MainController.feedlyCallback(code: String, error: String)

POST    /subscriptions              controllers.SubscriptionController.createSubscription()
GET     /subscriptions/:id          controllers.SubscriptionController.getSubscription(id: String)
PATCH   /subscriptions/:id          controllers.SubscriptionController.updateSubscription(id: String)

POST    /deliveries                 controllers.DeliveryController.createDelivery()
PATCH   /deliveries/:id             controllers.DeliveryController.updateDelivery(id: Long)
GET     /deliveries/:id             controllers.DeliveryController.getDelivery(id: Long)
GET     /deliveries                 controllers.DeliveryController.getDeliveries(page: Integer, pageSize: Integer)

GET     /feeds                      controllers.FeedController.getFeeds()

GET     /users/:id                  controllers.UserController.getUser(id: String)
PATCH   /users/:id                  controllers.UserController.updateUser(id: String)
