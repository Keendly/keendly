# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index()
POST    /person                     controllers.MainController.addPerson()
GET     /persons                    controllers.MainController.getPersons

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /login                      controllers.MainController.login()
GET     /feedlyCallback             controllers.MainController.feedlyCallback(code: String, error: String)
GET     /home                       controllers.SecuredController.home()
