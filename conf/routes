# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /login                      controllers.MainController.login()
GET     /feedlyCallback             controllers.MainController.feedlyCallback(code: String, error: String)
GET     /home                       controllers.SecuredController.home()
GET     /history                    controllers.SecuredController.history()
GET     /settings                   controllers.SecuredController.getSettings()
POST    /settings                   controllers.SecuredController.saveSettings()
GET     /logout                     controllers.MainController.logout()
POST    /deliver                    controllers.RestController.deliver()
POST    /schedule                   controllers.RestController.schedule()
GET     /subscription               controllers.RestController.getSubscription(id: String)
POST    /subscription               controllers.RestController.saveSubscription()
