# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /login                      controllers.LoginController.login(code: String)
# GET     /feedlyCallback             controllers.MainController.feedlyCallback(code: String, error: String)

#GET     /settings                   controllers.SecuredController.getSettings()
